<!-- -->
<nav class="sticky top-0 z-50 bg-white border-black border-b-4">
    <div class="w-full mx-auto px-4 sm:px-6">
        <div class="flex flex-wrap justify-between min-h-16">
            <div class="flex flex-shrink-0 items-center">
                <!-- Brand -->
                <a href="/" class="text-gray-900 text-lg font-semibold">Nick Hess</a>
            </div>
            <div class="flex items-center md:hidden">
                <!-- Hamburger menu -->
                <button id="hamburger" type="button" class="text-gray-500 hover:text-gray-900 focus:outline-none focus:text-gray-900" aria-label="Toggle menu">
                    <svg viewBox="0 0 24 24" class="h-6 w-6 fill-current">
                        <path fill-rule="evenodd" d="M4 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2zm0 5h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2zm0 5h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2z"></path>
                    </svg>
                </button>
            </div>
            <div id="navbar" class="hidden md:flex md:items-center md:space-x-4 flex-col md:flex-row w-full md:w-auto">
                <!-- Links -->
                <a href="/" class="text-gray-500 hover:text-gray-900 block pl-0">Home</a>
                <a href="/music" class="text-gray-500 hover:text-gray-900 block pl-0 ml-0">Music</a>
                <a href="/photography" class="text-gray-500 hover:text-gray-900 block pl-0 ml-0">Photography</a>
                <a href="/blog" class="text-gray-500 hover:text-gray-900 block pl-0 ml-0">Blog</a>
                <a href="/contact" class="text-gray-500 hover:text-gray-900 block pl-0 ml-0">Contact</a>
            </div>
        </div>
    </div>
</nav>
<script>
    const navbar = document.getElementById('navbar');
    const hamburger = document.getElementById('hamburger');

    hamburger?.addEventListener('click', () => {
        navbar?.classList.toggle('hidden');
    });
</script>